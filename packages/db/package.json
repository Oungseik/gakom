{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@repo/db",
  "type": "module",
  "private": true,
  "scripts": {
    "with-env": "dotenv -e ../../.env --",
    "check": "biome check --write .",
    "build": "tsdown",
    "check-types": "tsc --noEmit",
    "db:push": "bun --bun run with-env drizzle-kit push",
    "db:studio": "bun --bun run with-env drizzle-kit studio",
    "db:generate": "bun --bun run with-env drizzle-kit generate",
    "db:migrate": "bun run with-env drizzle-kit migrate"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./country": {
      "types": "./src/country.ts",
      "default": "./src/country.ts"
    }
  },
  "dependencies": {
    "@tursodatabase/database": "^0.3.2",
    "dotenv": "^17.2.3",
    "drizzle-orm": "1.0.0-beta.2-3a98f3a"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "1.0.0-beta.2-3a98f3a",
    "drizzle-seed": "^0.3.1",
    "tsdown": "^0.17.4",
    "typescript": "^5.9.3"
  }
}
