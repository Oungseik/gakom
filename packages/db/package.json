{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@repo/db",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --bun run with-env drizzle-kit studio",
    "with-env": "dotenv -e ../../.env --",
    "check": "biome check --write .",
    "build": "tsdown",
    "check-types": "tsc --noEmit",
    "db:push": "bun --bun run with-env drizzle-kit push",
    "db:studio": "bun --bun run with-env drizzle-kit studio",
    "db:generate": "bunx --bun drizzle-kit generate",
    "db:migrate": "bun run with-env drizzle-kit migrate"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./auth": {
      "types": "./src/auth.ts",
      "default": "./src/auth.ts"
    },
    "./user": {
      "types": "./src/user.ts",
      "default": "./src/user.ts"
    },
    "./posts": {
      "types": "./src/property-posts.ts",
      "default": "./src/property-posts.ts"
    },
    "./saved-properties": {
      "types": "./src/saved-properties.ts",
      "default": "./src/saved-properties.ts"
    },
    "./reset": {
      "types": "./src/reset.ts",
      "default": "./src/reset.ts"
    }
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "drizzle-orm": "1.0.0-beta.15-859cf75",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "@repo/config": "workspace:*",
    "@types/bun": "^1.3.8",
    "@types/pg": "^8.16.0",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "1.0.0-beta.15-859cf75",
    "drizzle-seed": "^0.3.1",
    "tsdown": "0.20.3",
    "typescript": "^5.9.3"
  }
}
