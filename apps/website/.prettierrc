{
  "$schema": "https://json.schemastore.org/prettierrc.json",
  "useTabs": false,
  "singleQuote": false,
  "trailingComma": "es5",
  "printWidth": 100,
  "plugins": [
    "prettier-plugin-svelte",
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "importOrder": ["^\\$(.*)/(.*)$", "^[./]"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte"
      }
    }
  ]
}
